{
    "name": "nest-fast-start",
    "version": "0.0.2",
    "description": "Template for fast start",
    "author": "cmpnion",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "start:dev": "ts-node-dev --respawn --transpile-only --poll src/main.ts",
        "start:prod": "node dist/main",
        "dev:up": "docker compose --env-file .env.development --profile dev up -d --build",
        "dev:down": "docker compose --env-file .env.development --profile dev down",
        "prod:up": "docker compose --env-file .env.production --profile prod up -d --build",
        "prod:down": "docker compose --env-file .env.production --profile prod down",
        "dev:logs": "docker compose --env-file .env.development --profile dev logs -f backend-dev",
        "prod:logs": "docker compose --env-file .env.production --profile prod logs -f backend",
        "migrate:dev": "cross-env NODE_ENV=development npx sequelize-cli db:migrate --config config/config.mjs",
        "migrate:prod": "cross-env NODE_ENV=production npx sequelize-cli db:migrate --config config/config.mjs",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "prettier": "prettier --write .",
        "check-updates": "ncu"
    },
    "dependencies": {
        "@keyv/redis": "^4.4.0",
        "@nestjs/bullmq": "^11.0.3",
        "@nestjs/cache-manager": "^3.0.1",
        "@nestjs/common": "^11.1.3",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.3",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/platform-express": "^11.1.3",
        "@nestjs/sequelize": "^11.0.0",
        "@nestjs/swagger": "^11.2.0",
        "bullmq": "^5.58.0",
        "cache-manager": "^7.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cross-env": "^7.0.3",
        "ioredis": "^5.6.1",
        "joi": "^17.13.3",
        "nestjs-i18n": "^10.5.1",
        "pg": "^8.16.0",
        "pg-hstore": "^2.3.4",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "sequelize": "^6.37.7",
        "sequelize-typescript": "^2.1.6",
        "uid": "^2.0.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.29.0",
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.3",
        "@types/express": "^5.0.3",
        "@types/joi": "^17.2.3",
        "@types/node": "^24.0.1",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "globals": "^16.2.0",
        "npm-check-updates": "^18.0.1",
        "prettier": "^3.5.3",
        "sequelize-cli": "^6.6.3",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.0"
    },
    "lint-staged": {
        "**/*.{js,ts,json,md}": [
            "prettier --write"
        ]
    }
}
